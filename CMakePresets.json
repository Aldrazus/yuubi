{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 26
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Ninja Multi-Config",
      "description": "Default build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    },
    {
      "name": "vs",
      "inherits": "default",
      "displayName": "Visual Studio Config",
      "description": "Default build using Visual Studio",
      "generator": "Visual Studio 18 2026",
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "enableMicrosoftCodeAnalysis": true,
          "enableClangTidyCodeAnalysis": true
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default",
      "targets": [ "all" ],
      "jobs": 8
    },
    {
      "name": "defaultVS",
      "inherits": "default",
      "configurePreset": "vs"
    },
    {
      "name": "debug",
      "inherits": "default",
      "configuration": "Debug",
      "displayName": "Debug",
      "description": "Debug build"
    },
    {
      "name": "release",
      "inherits": "default",
      "configuration": "Release",
      "displayName": "Release",
      "description": "Release build"
    },
    {
      "name": "relWithDebInfo",
      "inherits": "default",
      "configuration": "RelWithDebInfo",
      "displayName": "RelWithDebInfo",
      "description": "Release build with debug info"
    },
    {
      "name": "debugVS",
      "inherits": "defaultVS",
      "configuration": "Debug",
      "displayName": "Debug VS",
      "description": "Debug build using MSVC"
    },
    {
      "name": "releaseVS",
      "inherits": "defaultVS",
      "configuration": "Release",
      "displayName": "Release VS",
      "description": "Release build using MSVC"
    },
    {
      "name": "relWithDebInfoVS",
      "inherits": "defaultVS",
      "configuration": "RelWithDebInfo",
      "displayName": "RelWithDebInfoVS",
      "description": "Release build with debug info using MSVC"
    }
  ]
}
